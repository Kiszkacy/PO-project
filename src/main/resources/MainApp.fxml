<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<GridPane fx:id="grid"
          fx:controller="evolution.ui.MainAppController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    <Text text="Simulation configs"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"
    />
    <Button fx:id="configButton"
            text="Select Config"
            onAction="#runFileChooser"
            GridPane.columnIndex="2"
            GridPane.rowIndex="1"
    />
    <Button fx:id="StartButton"
            text="Start simulation"
            onAction="#runSimulationInstance"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
    />
    <Button fx:id="ClearButton"
            text="Clear settings"
            onAction="#clearAllSettings"
            GridPane.columnIndex="2"
            GridPane.rowIndex="2"
    />


</GridPane>

